<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:padding="8dp"
		android:background="@drawable/bg0807"
		android:orientation="vertical"
		android:weightSum="8">
		<LinearLayout
			android:id="@+id/linear2"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="100"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear13"
				android:layout_width="1dp"
				android:layout_height="match_parent"
				android:padding="8dp"
				android:orientation="vertical"
				android:layout_weight="10"/>
			<TextView
				android:id="@+id/txt_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:gravity="center_horizontal|center_vertical"
				android:text="אימון גלגלת"
				android:textSize="25sp"
				android:textColor="#FFFFFF"
				android:layout_weight="80"/>
			<ImageView
				android:id="@+id/intro"
				android:layout_width="1dp"
				android:layout_height="wrap_content"
				android:src="@drawable/profile"
				android:scaleType="fitCenter"
				android:layout_gravity="top"
				android:layout_weight="10"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear3"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="100"
			android:layout_weight="2">
			<TextView
				android:id="@+id/top_minus"
				android:layout_width="5dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="#9E9E9E"
				android:gravity="center_horizontal|center_vertical"
				android:text="-"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="5"/>
			<LinearLayout
				android:id="@+id/lin_resist"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:gravity="center_horizontal|center_vertical"
				android:orientation="horizontal"
				android:weightSum="100"
				android:layout_weight="30">
				<LinearLayout
					android:id="@+id/linear11"
					android:layout_width="10dp"
					android:layout_height="match_parent"
					android:gravity="right|center_vertical"
					android:orientation="horizontal"
					android:layout_weight="51">
					<TextView
						android:id="@+id/resist"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:gravity="right|center_vertical"
						android:text="40"
						android:textSize="50sp"
						android:textColor="#FFFFFF"/>
					<TextView
						android:id="@+id/textview10"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:padding="8dp"
						android:text="KG"
						android:textSize="18sp"
						android:textColor="#808090"/>
				</LinearLayout>
				<TextView
					android:id="@+id/txt_resist"
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="right|center_vertical"
					android:text="התנגדות:"
					android:textSize="20sp"
					android:textColor="#808090"
					android:layout_weight="49"/>
			</LinearLayout>
			<TextView
				android:id="@+id/top_plus"
				android:layout_width="5dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="#9E9E9E"
				android:gravity="center_horizontal|center_vertical"
				android:text="+"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="5"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear4"
			android:layout_width="match_parent"
			android:layout_height="10dp"
			android:orientation="horizontal"
			android:layout_weight="1">
			<SeekBar
				android:id="@+id/sb_top"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:background="@drawable/bar3x"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear5"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="100"
			android:layout_weight="2">
			<TextView
				android:id="@+id/bottom_minus"
				android:layout_width="5dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="#9E9E9E"
				android:gravity="center_horizontal|center_vertical"
				android:text="-"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="5"/>
			<LinearLayout
				android:id="@+id/lin_secs"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:weightSum="3"
				android:layout_weight="30">
				<TextView
					android:id="@+id/secs"
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="right|center_vertical"
					android:text="--:--"
					android:textSize="40sp"
					android:textColor="#474752"
					android:layout_weight="2"/>
				<TextView
					android:id="@+id/txt_secs"
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="right|center_vertical"
					android:text="שניות:"
					android:textSize="20sp"
					android:textColor="#404045"
					android:layout_weight="1"/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/lin_reps"
				android:layout_width="30dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:gravity="right|center_vertical"
				android:orientation="horizontal"
				android:weightSum="2"
				android:layout_weight="30">
				<TextView
					android:id="@+id/reps"
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="right|center_vertical"
					android:text="--"
					android:textSize="40sp"
					android:textColor="#FF0000"
					android:layout_weight="1"/>
				<TextView
					android:id="@+id/txt_reps"
					android:layout_width="10dp"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:gravity="right|center_vertical"
					android:text="חזרות:"
					android:textSize="20sp"
					android:textColor="#808090"
					android:layout_weight="1"/>
			</LinearLayout>
			<TextView
				android:id="@+id/bottom_plus"
				android:layout_width="5dp"
				android:layout_height="match_parent"
				android:layout_margin="2dp"
				android:padding="8dp"
				android:background="#9E9E9E"
				android:gravity="center_horizontal|center_vertical"
				android:text="+"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="5"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear6"
			android:layout_width="match_parent"
			android:layout_height="10dp"
			android:orientation="horizontal"
			android:layout_weight="1">
			<SeekBar
				android:id="@+id/sb_bottom"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:padding="8dp"
				android:background="@drawable/bar3x"/>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/linear7"
			android:layout_width="match_parent"
			android:layout_height="20dp"
			android:gravity="center_horizontal|center_vertical"
			android:orientation="horizontal"
			android:weightSum="100"
			android:layout_weight="1">
			<LinearLayout
				android:id="@+id/linear12"
				android:layout_width="10dp"
				android:layout_height="wrap_content"
				android:padding="8dp"
				android:orientation="horizontal"
				android:layout_weight="70">
				<TextView
					android:id="@+id/s1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="0"
					android:textSize="12sp"
					android:textColor="#FFFFFF"/>
				<TextView
					android:id="@+id/s2"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="0"
					android:textSize="12sp"
					android:textColor="#FFFFFF"/>
				<TextView
					android:id="@+id/s3"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="0"
					android:textSize="12sp"
					android:textColor="#FFFFFF"/>
				<TextView
					android:id="@+id/s4"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:padding="8dp"
					android:text="0"
					android:textSize="12sp"
					android:textColor="#FFFFFF"/>
			</LinearLayout>
			<Button
				android:id="@+id/btn_OK"
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:layout_marginLeft="10dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="10dp"
				android:layout_marginBottom="5dp"
				android:padding="8dp"
				android:background="#D50000"
				android:text="לחץ כדי להתחיל"
				android:textSize="20sp"
				android:textColor="#FFFFFF"
				android:layout_weight="30"/>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
